extends includes/layout

block content
    .div_ventana
        .div_ventana__titulo
            p #{title}
        .div_encabezado
            h2 Nuevo Usuario
            p: a(href="#") Ya tienes cuenta? Inicie sesion aqui
        .div_formulario
            .div_formulario--izquierda
                label(for="nombres") Nombres #[br]
                p: input(type="text" placeholder="Ingrese nombre(s)")
                label(for="apellidos") Apellidos #[br]
                p: input(type="text" placeholder="Ingrese apellido(s)")
                label(for="direccion") Direccion #[br]
                p: input(type="text" placeholder="Ingrese dirección")
                label(for="telefono") Teléfono #[br]
                p: input(type="tel" placeholder="Ingrese número de teléfono")
                label(for="correo") Correo #[br]
                p: input(type="email" placeholder="Ingrese correo electrónico")
                label(for="contrasenia") Contraseña #[br]
                p: input(type="password" placeholder="Ingrese contraseña")
                label(for="password2") Confirme su contraseña #[br]
                p: input(type="password" placeholder="Confirme contraseña")
                p Genero
                input(type="radio", name="genero" value="1" id="rad_masculino")
                label(for="rad_masculino") Masculino #[br]
                input(type="radio", name="genero" value="0" id="rad_femenino")
                label(for="rad_femenino") Femenino
            .div_formulario--derecha
                label(for="nacimiento_fecha") Fecha de nacimiento #[br]
                select#dia(name="dia")
                    option(value="no") Día
                select#mes(name="mes")
                    option(value="no") Mes
                select#anio(name="anio")
                    option(value="no") Año
                p CUI
                p: input(type="text" placeholder="Ingrese CUI")
                p Departamento
                select#depto(name="depto")
                    option(value="no") Selecciona un departamento
                select#mncipio(name="mncipio")
                    option(value="no") Selecciona un municipio
                p Tus padres, tutores y/o protutores tienen conocimiento del uso y autorización la navegación y utilización de los servicios
                input#auth_si(type="radio", name="auth" value='si')
                label(for="auth_si") Sí
                input#auth_no(type="radio", name="auth" value='no')
                label(for="auth_no") No
                p#tos: a(href="http://#") Terminos y condiciones de uso
                input#accept(type="checkbox", name="accept" value="accept")
                label(for="accept") Acepto los terminos y condiciones
