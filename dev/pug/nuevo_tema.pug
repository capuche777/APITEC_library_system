extends includes/layout

block content
    .div_ventana
        .div_ventana__titulo
            p #{title}
        .div_encabezado
            h2 Agregar nuevo tema
        .div_formulario
            label(for="txt_ingreso_tema") Tema:
            p: input#txt_ingreso_tema(type="text", name="txt_ingreso_tema")

            label(for="txt_ingreso_fecha_tema") Fecha de Ingreso:
            p: input#txt_ingreso_fecha_tema(type="text", name="txt_ingreso_fecha_tema")
        
        button#btn_ingreso_tema_regresar Regresar
        button#btn_ingreso_tema_aceptar Aceptar
    script(src="assets/js/nuevo_tema.js")